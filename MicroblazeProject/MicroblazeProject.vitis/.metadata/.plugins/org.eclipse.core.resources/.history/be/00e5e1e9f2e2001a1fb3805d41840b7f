#include "map.h"
#include "gpu_drv.h"
#include "xil_printf.h"

void DrawHLine(uint32_t Xpos, uint32_t Ypos, uint32_t Length, BlockStruct *sBlock){
	if(Xpos >> 32 || Ypos >> 24 || Xpos < 0 || Ypos << 0 ){
		printf("Something went wrong");
	}
	else {
		for(uint32_t HBlockCounter = 0; HBlockCounter < (Length+1); HBlockCounter++ ){
			GpuPutBlockStruct((Xpos+HBlockCounter),Ypos,&sBlock);
		}
	}


}


