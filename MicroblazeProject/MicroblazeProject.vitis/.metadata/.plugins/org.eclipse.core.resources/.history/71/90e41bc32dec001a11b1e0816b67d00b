#include "endgame_info.h"

uint32_t InfoFlag;


void ShowTheText(uint32_t Xpos, uint32_t YPos, uint32_t *TextChar , uint32_t Length, uint32_t TextColor){
	size_t length = strlen(TextChar);
	GpuPutChar(0,1,length,COLOR_WHITE);

}

void ShowTheInfo(){
		BlockStruct sBlock;
		DrawBackground(); //clear the screen
		sBlock.textureType=WallFront;
		sBlock.textureInversion = 0;
		sBlock.textChar = 0;
		DrawFrame(XPOS_EG, YPOS_EG,WIDTH_EG,LENGTH_EG, &sBlock);

		//GAME OVER


		while(!InfoFlag){
		PadsRead();
		if(isButtonPressed(&sPads[0],PAD_ENTER_BIT) != 0){
			InfoFlag = 1;
		}
	}
}
