#include "endgame_info.h"

uint32_t InfoFlag;

void ShowTheInfo(){
		BlockStruct sBlock;
		DrawBackground(); //clear the screen
		sBlock.textureType=WallFront;
		DrawFrame(XPOS_EG, YPOS_EG,WIDTH_EG,LENGTH_EG, &sBlock);

		while(!InfoFlag){
		PadsRead();
		if(isButtonPressed(&sPads[0],PAD_ENTER_BIT) != 0){
			InfoFlag = 1;
		}
	}
}
