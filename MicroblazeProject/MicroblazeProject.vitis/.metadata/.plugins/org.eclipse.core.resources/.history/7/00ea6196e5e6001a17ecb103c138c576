    sBlock.textureType=FireHorizontal;
    GpuPutBlockStruct (13, 10,&sBlock);


    sBlock.textureType=WallFront;
    DrawClockFrame(&sBlock);
    //end of rubbish code
    uint32_t cColon = GpuAsciiToChar(':');



    ClockInit();
    while(1)
    {

    	ShowTime();
    	PadsRead();
    	putHex(sPads[0].buttons,0,5);

    }

    return 0;
}
