#include "endgame_info.h"

uint32_t InfoFlag;


void ShowTheText(uint32_t Xpos, uint32_t Ypos, char *TextChar,uint32_t TextColor){
	size_t TextLength = strlen(TextChar);
	GpuPutChar(0,1,TextLength,TextColor);

	for(uint32_t CharCounter=0; CharCounter<TextLength; CharCounter++){
		uint8_t cActualCharacter = GpuAsciiToChar(TextChar[1]);
		GpuPutChar(Xpos+CharCounter,Ypos,cActualCharacter,TextColor);
	}

}

void ShowTheInfo(){
		BlockStruct sBlock;
		DrawBackground(); //clear the screen
		sBlock.textureType=WallFront;
		sBlock.textureInversion = 0;
		sBlock.textChar = 0;
		DrawFrame(XPOS_EG, YPOS_EG,WIDTH_EG,LENGTH_EG, &sBlock);

		//GAME OVER


		while(!InfoFlag){
		PadsRead();
		if(isButtonPressed(&sPads[0],PAD_ENTER_BIT) != 0){
			InfoFlag = 1;
		}
	}
}
