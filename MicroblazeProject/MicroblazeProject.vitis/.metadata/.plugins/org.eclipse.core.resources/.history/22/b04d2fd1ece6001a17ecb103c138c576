#ifndef PAD_DRV_H
#define PAD_DRV_H

#ifdef __cplusplus
extern "C" {
#endif

#include "xil_types.h"

/////////////////////////////////////////////////////

#define PAD_ADDR 0xC0000000
#define PADS_COUNT 2

#define PAD_INSERTION_MASK 5 //neg

#define PAD_LEFT_MASK 0 //KEY1
#define PAD_UP_MASK 1 //KEY2
#define PAD_RIGHT_MASK 2 //KEY3
#define PAD_DOWN_MASK 3 //KEY4
#define PAD_ENTER_MASK 4 //KEY5 - enter

#define PAD_MASK 0x1F

////////////////////////////////////////////////////

typedef struct
{
	uint32_t buttons;
	uint16_t isConnected;
	uint16_t priorityButton;
}PadStruct;

PadStruct sPads[PADS_COUNT];

////////////////////////////////////////////////////

void decodePad1 (uint32_t inputData, PadStruct *Pad);

void decodePad2 (uint32_t inputData, PadStruct *Pad);

void PadsRead ();

#endif
