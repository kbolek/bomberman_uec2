#ifndef SPRITES_H
#define SPRITES_H

#include "timers_drv.h"
#include "gpu_drv.h"

#define SPRITES_COUNT 8

typedef struct
{
	uint32_t x;
	uint32_t y;
}position;

typedef struct
{
	position oldPosition;
	position newPosition;
	sprite spriteID;
	uint32_t actionTime;
	void (*actionFunction)();
}sprite;

sprite asSprites[SPRITES_COUNT];

#endif
